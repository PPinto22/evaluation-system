<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="User" table="`User`" lazy="false" discriminator-value="User">
		<id name="attribute" column="Attribute" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<discriminator column="Discriminator" type="string"/>
		<property name="ID" column="ID" type="integer" length="10" not-null="true" lazy="false"/>
		<property name="email" column="Email" type="string" length="255" not-null="false" lazy="false"/>
		<property name="password" column="Password" type="string" length="255" not-null="false" lazy="false"/>
		<property name="firstName" column="FirstName" type="string" length="255" not-null="false" lazy="false"/>
		<property name="lastName" column="LastName" type="string" length="255" not-null="false" lazy="false"/>
		<property name="registered" column="Registered" type="boolean" not-null="false" lazy="false"/>
		<subclass name="Student" discriminator-value="Student" lazy="false">
		</subclass>
		<subclass name="Teacher" discriminator-value="Teacher" lazy="false">
			<set name="ORM__classes" lazy="true" cascade="save-update,lock" inverse="true">
				<key column="UserAttribute2" not-null="true"/>
				<one-to-many class="Class"/>
			</set>
		</subclass>
	</class>
</hibernate-mapping>
